#include<iostream.h>
#include<conio.h>

void main()
{
	double num=1;
	int n;
	int i;
	double suma=0;

cout<<"ESTE PROGRAMA HALLA LA SUMA"<<endl;
	

cout<<"ingrese el valor de n"<<endl;
	cin>>n;

	for (i=1;i<=n;i++)

	{
		
		suma=suma+(num/(2*i));
	}

	cout<<"la respuesta a la suma es:"<<suma<<endl;


getch();
}






